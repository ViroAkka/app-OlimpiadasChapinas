@{
    var usuario = Session["usuario"];
    
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Olimpiadas Chapinas</title>
    <meta charset="UTF-8">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;700;900&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link href="@Url.Content("~/CSS/style.css?v=2")" rel="stylesheet" />
</head>
<body class="@(ViewBag.BodyClass)">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark mb-0">
        <div class="contenedor-navbar d-flex justify-content-between align-items-center w-100 px-3">
            <div class="navbar-logo">
                @Html.ActionLink("Olimpiadas Chapinas", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mx-auto">
                    <li>@Html.ActionLink("Deporte", "Deporte", "Deporte", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Evento", "Evento", "Evento", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("FormaPago", "FormaPago", "FormaPago", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Inscripcion", "Inscripcion", "Inscripcion", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Pago", "Pago", "Pago", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Pais", "Pais", "Pais", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Participante", "Participante", "Participante", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Premiacion", "Premiacion", "Premiacion", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Puesto", "PuestoPremiacion", "PuestoPremiacion", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Usuario", "Usuario", "Usuario", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>

            @if (Session["usuario"] != null)
            {
                <div class="dropdown">
                    <a class="nav-link dropdown-toggle text-white d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle fs-4 me-1"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li class="dropdown-item-text">
                            <strong>@usuario</strong><br />

                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" href="@Url.Action("Logout", "Usuario")">
                                <i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión
                            </a>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </nav>

    <!-- Modal de confirmación -->
    <div class="modal fade" id="confirmarEliminarModal" tabindex="-1" aria-labelledby="confirmarEliminarModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="confirmarEliminarModalLabel">Confirmar eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que deseas eliminar este registro?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <a href="#" class="btn btn-danger" id="btnConfirmarEliminar">Eliminar</a>
                </div>
            </div>
        </div>
    </div>
    <div class="body-content mt-0 p-0">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Olimpiadas Chapinas</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Popper.js -->
    <script src="https://unpkg.com/popperjs/core@2"></script>

    <!-- Bootstrap 5 con bundle que ya incluye Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
    <script src="~/JS/spotlight.js"></script>
</body>
</html>
