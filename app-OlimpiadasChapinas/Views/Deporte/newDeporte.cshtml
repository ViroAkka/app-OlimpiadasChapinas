
@{
    ViewBag.Title = "newDeporte";
    ViewBag.BodyClass = "vista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script src="~/JS/jsDeporte.js"></script>
    <script src="~/JS/modal.js"></script>

    @if (TempData["ErrorMensaje"] != null)
    {
        <script>
            mostrarNotificacion("@TempData["ErrorMensaje"]");
        </script>
    }
}

<h2 class="table-title">Registro de Nuevos Deportes</h2>

<form class="form-principal" action="/Deporte/guardar" method="post">
    <div>
        <div class="formulario card border-primary">
            <div class="card-header formulario-header">
                <label class="p-2">Nuevo Deporte</label>
                <button onclick="location.href = '@Url.Action("Deporte", "Deporte")'; return false;" class="btn btn-success">Regresar</button>
            </div>

            <div class="col" align="center">
                <div class="form-group">
                    <label class="p-2">Nombre del Deporte</label>
                    <input type="text" required class="form-control mb-2" id="nombre" name="nombre" />
                </div>
            </div>

            <div class="col" align="center">
                <div class="form-group">
                    <label class="p-2">Categoría</label>
                    <select type="text" required class="form-control mb-2 lista-opciones" id="categoria" name="categoria">
                        <option disabled selected>----Seleccionar una opción----</option>
                        <option>Individual</option>
                        <option>Colectivo</option>
                    </select>
                </div>
            </div>

            <div class="col" align="center">
                <div class="form-group">
                    <label class="p-2">Descripción del Deporte</label>
                    <input type="text" required class="form-control mb-2" id="descripcion" name="descripcion" />
                </div>
            </div>

            <div class="col" align="center">
                <div class="form-group">
                    <label class="p-2">Cantidad de jugadores por equipo</label>
                    <input type="number" required class="form-control mb-2" id="cantidadJugadores" name="cantidadJugadores" min="1" max="11" />
                </div>
            </div>

            <div class="contenedor-btn">
                <button type="submit" class="btn btn-primary btn-guardar" onclick="validarGuardadoDeCampos(event);">Guardar</button>
            </div>

        </div>
    </div>

</form>
