@model System.Data.DataSet

@{
    ViewBag.Title = "ActualizarDeporte";
    ViewBag.BodyClass = "vista";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var categoria = Model.Tables[0].Rows[0]["categoria"].ToString().Trim();
}

@section scripts {
    <script src="~/JS/jsDeporte.js"></script>
}

<h2 class="table-title">Actualización de Deportes</h2>

<form class="contenedor form-principal" action="/Deporte/actualizar" method="post">
    <div>
        <div class="formulario card border-primary">
            <div class="card-header formulario-header">
                <label class="p-2">Actualizar Deporte</label>
                <button onclick="location.href = '@Url.Action("Deporte", "Deporte")'; return false;" class="btn btn-success">Regresar</button>
            </div>

            <div class="col" align="center">
                <div class="form-group">
                    <label class="p-2">ID del Deporte</label>
                    <input type="text" readonly value="@Model.Tables[0].Rows[0]["idDeporte"].ToString()" required class="form-control mb-2 input-readonly" id="idDeporte" name="idDeporte" />
                </div>
            </div>

            <div class="col" align="center">
                <div class="form-group">
                    <label class="p-2">Nombre del Deporte</label>
                    <input type="text" value="@Model.Tables[0].Rows[0]["nombre"].ToString()" required class="form-control mb-2" id="nombre" name="nombre" />
                </div>
            </div>

            <div class="col" align="center">
                <label class="p-2">Categoría</label>
                <select type="text" required class="form-control mb-2 lista-opciones" id="categoria" name="categoria">
                    <option disabled @(categoria != "Individual" && categoria != "Colectivo" ? "selected" : "")>----Seleccionar una opción----</option>
                    <option @(categoria == "Individual" ? "selected" : "")>Individual</option>
                    <option @(categoria == "Colectivo" ? "selected" : "")>Colectivo</option>
                </select>
            </div>

            <div class="col" align="center">
                <div class="form-group">
                    <label class="p-2">Descripción del Deporte</label>
                    <input type="text" value="@Model.Tables[0].Rows[0]["descripcion"].ToString()" required class="form-control mb-2" id="descripcion" name="descripcion" />
                </div>
            </div>

            <div class="col" align="center">
                <div class="form-group">
                    <label class="p-2">Cantidad de jugadores por equipo</label>
                    <input type="number" value="@Model.Tables[0].Rows[0]["cantidadJugadores"].ToString()" required class="form-control mb-2" id="cantidadJugadores" name="cantidadJugadores" />
                </div>
            </div>

            <div class="contenedor-btn">
                <button type="submit" class="btn btn-primary btn-guardar" onclick="validarGuardadoDeCampos(event);">Guardar</button>
            </div>

        </div>
    </div>

</form>


