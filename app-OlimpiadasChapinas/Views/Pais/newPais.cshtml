
@{
    ViewBag.Title = "newPais";
    ViewBag.BodyClass = "vista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script src="~/JS/jsPais.js"></script>
}

<h2 class="contenedor table-title">Registro de nuevos paises</h2>

<form class="contenedor form-principal" action="/Pais/Guardar" method="post">
    <div>
        <div class="formulario card border-primary">
            <div class="card-header formulario-header">
                <label class="p-2">Nuevo Pais</label>
                <button onclick="location.href = '@Url.Action("Pais", "Pais")'; return false;" class="btn btn-success">Regresar</button>
            </div>

            <div class="col" align="center">
                <div class="form-group">
                    <label class="p-2">ID del País (3 letras)</label>
                    <input type="text" required class="form-control mb-2" id="idPais" name="idPais" />
                </div>
            </div>

            <div class="col" align="center">
                <div class="form-group">
                    <label class="p-2">Nombre del País</label>
                    <input type="text" required class="form-control mb-2" id="nombre" name="nombre" />
                </div>
            </div>

            <div class="contenedor-btn">
                <button type="submit" class="btn btn-primary btn-guardar" onclick="validarGuardadoDeCampos(event);">Guardar</button>
            </div>

        </div>
    </div>
</form>



